<section class="position-relative overflow-hidden text-center bg-light hero" data-src="https://images.unsplash.com/photo-1518317507427-5346735246ab?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=f79bbbf1ef58195f7585a0d5f7732569&auto=format&fit=crop&w=1050&q=80">
  <div class="col-md-11 p-lg-11 mx-auto my-11">
    <header class="hero__header text-left">
      <h1 class="hero__title">Log in</h1>
    </header>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form--line row' }) do |f| %>
      <div class="input-group col-md-3 text-left">
        <%= f.label :email, class: 'display-block' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'display-block input__field' %>
      </div>

      <div class="input-group col-md-3 text-left">
        <%= f.label :password, 'Senha', class: 'display-block' %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'display-block input__field' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="input-group col-md-3 text-left">
          <%= f.check_box :remember_me, class: 'display-block' %>
          <%= f.label :remember_me, 'Mantenha-me logado', class: 'display-block input__field' %>
        </div>
      <% end -%>

      <%= f.submit "Enviar", class: 'button col-md-3' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
