<h3>Criar plano de viagem</h3>

<% if @trip_plan.errors.present? %>
  <% @trip_plan.errors.full_messages.each do |msg| %>
      <%= msg %> <br>
  <% end %>
<% end %>
<%= form_for(@trip_plan)  do |f| %>
  <div>
    <%= f.label :title, 'Título' %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :start_date, 'Data Início' %>
    <%= f.date_field :start_date %>
  </div>
  <div>
    <%= f.label :end_date, 'Data Fim' %>
    <%= f.date_field :end_date %>
  </div>
  <%= f.submit 'Criar' %>
<% end %>
